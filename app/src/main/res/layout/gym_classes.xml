<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".GymAccess.GymClasses">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/cardio"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/curve_rectangle_blue"
            android:onClick="CardioClick"
            android:text="Cardio"
            android:textColor="@color/lighter_blue"
            android:textSize="10sp" />

        <Button
            android:id="@+id/Strength"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/curve_rectangle_dark_pink"
            android:onClick="StrengthClick"
            android:text="Strength"
            android:textColor="@color/pearl_white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/Mind"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/curve_rectangle_light_purple"
            android:onClick="MindClick"
            android:text="Mind"
            android:textColor="@color/pearl_white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/Hilt"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/curve_rectangle_bright_blue"
            android:onClick="HiltClick"
            android:text="Hilt"
            android:textColor="@color/pearl_white"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/Cycling"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/curve_rectangle_orange"
            android:onClick="CyclingClick"
            android:text="Cycling"
            android:textColor="@color/pearl_white"
            android:textSize="10sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_GymClasses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@color/pearl_white">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>