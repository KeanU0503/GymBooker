<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gymTrainer_Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gym Type"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gymTrainer_Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="888 min"
                android:layout_marginEnd="5dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/gymTrainer_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:textColor="@color/orange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/gymTrainer_Details"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gymTrainer_Day"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Someday"/>

            <TextView
                android:id="@+id/gymTrainer_Time"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88:88"/>
        </LinearLayout>



        <Button
            android:id="@+id/gymTrainer_Book"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pearl_white"
            android:text="Book Now"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/gymTrainer_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pearl_white"
            android:text="Edit"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>