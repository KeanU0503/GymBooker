<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:context=".Adapter.AdapterGymHistory">

    <LinearLayout
        android:padding="17dp"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adp_gymHistory_gymType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Gym Type:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/adp_GymHistory_selectedDate"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Date: "/>

        <TextView
            android:id="@+id/adp_GymHistory_selectedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Time: "/>

        <TextView
            android:id="@+id/adp_GymHistory_selectedDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Duration: ">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>