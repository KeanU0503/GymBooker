<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/pearl_white"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/act_profileName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginStart="7dp"
                android:text="Profile Name: "/>

            <TextView
                android:id="@+id/profileName"
                android:layout_width="match_parent"
                android:layout_marginStart="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:text="xxx xxx xxx"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/act_profileEmail"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginStart="7dp"
                android:text="Email: "/>

            <TextView
                android:id="@+id/profileEmail"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="2dp"
                android:text="xxx@gmail.com"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/act_profileContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:text="Contact Number: "/>

            <TextView
                android:id="@+id/profileContactNumber"
                android:layout_marginStart="123dp"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="20dp"
                android:text="012-8888888"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/profileEdit"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:text="Edit"
        android:textColor="@color/white"
        android:background="@color/blue"/>

</LinearLayout>
